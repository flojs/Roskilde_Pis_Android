<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roskildeorange"
    android:orientation="vertical" 
    android:gravity="center|top">

    <TextView
        android:id="@+id/resultatText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="20dp" >
    </TextView>

    <TextView
        android:id="@+id/pointsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Henter point.."
        android:textSize="20dp" >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:text="Se hvem af dine facebook venner der har flest point" />

    <TextView
        android:id="@+id/moveOnText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:autoLink="web"
        android:gravity="center"
        android:text="http://apps.facebook.com/roskildepis/" />

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Scan toilet"
        android:textSize="20dp" />
    
    <Button
        android:id="@+id/postFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Post på din facebook væg"
        android:textSize="20dp" />

</LinearLayout>